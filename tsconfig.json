{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strictNullChecks": true,
        "module": "commonjs",
        "target": "es2017",
        "allowJs": true,
        "lib": ["esnext"],
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "typeRoots": [
            "./node_modules/@types/",
            "./src/@types/"
        ],
        "importHelpers": true,
        "experimentalDecorators": true
    },
    "include": [
        "./src/**/*",
        "./test/**/*"
    ]
}